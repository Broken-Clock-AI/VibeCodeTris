{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "types": ["vite/client", "jest", "node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
